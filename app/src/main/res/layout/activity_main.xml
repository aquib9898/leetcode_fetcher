<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <View
        android:id="@+id/topAccent"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="-80dp"
        android:layout_marginEnd="-80dp"
        android:background="@drawable/top_accent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorSurface"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tell us your name to get started"
        android:textSize="14sp"
        android:textColor="#DCEAFF"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintTop_margin="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your name"
        android:textColor="@color/colorOnSurface"
        android:hintTextColor="@color/colorHint"
        android:background="@drawable/rounded_edittext"
        android:importantForAutofill="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_margin="28dp"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorSurface"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/editTextText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weâ€™ll keep your info private."
        android:textSize="12sp"
        android:textColor="#BFE0FF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_margin="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
